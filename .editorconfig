root = true

# Global settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Shell scripts: 2 spaces, 100 char limit
[*.sh]
indent_style = space
indent_size = 2
max_line_length = 100

# C/C++ files: 4 spaces (configured via .clang-format)
[*.{c,h}]
indent_style = space
indent_size = 4

# Lisp files: 2 spaces
[*.lisp]
indent_style = space
indent_size = 2
