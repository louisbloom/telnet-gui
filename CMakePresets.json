{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config",
      "description": "Default build using Ninja with UCRT64 toolchain isolation",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "environment": {
        "PATH": "$env{USERPROFILE}/scoop/apps/msys2/current/ucrt64/bin;C:/msys64/ucrt64/bin;$penv{PATH}"
      },
      "cacheVariables": {
        "CMAKE_MAKE_PROGRAM": {
          "type": "FILEPATH",
          "value": "$env{USERPROFILE}/scoop/apps/msys2/current/ucrt64/bin/ninja.exe"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "environment": {
        "PATH": "$env{USERPROFILE}/scoop/apps/msys2/current/ucrt64/bin;C:/msys64/ucrt64/bin;$penv{PATH}"
      }
    }
  ]
}
